<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behavior="clr-namespace:My.Wpf.Behaviors;assembly=My.Wpf"
                    xmlns:windows="clr-namespace:Mov.Standard.Windows"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <Style x:Key="TitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}">
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="behavior:TextBlockBehavior.MaxLines" Value="2" />
    </Style>
    
    <Style x:Key="DescriptionTextBlock" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="Foreground" Value="DarkGray" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="behavior:TextBlockBehavior.MaxLines" Value="4" />
    </Style>

    <Style x:Key="DefaultImage" TargetType="Image">
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Self}, Path=Source.PixelWidth}" />
        <Setter Property="Height" Value="{Binding RelativeSource={RelativeSource Self}, Path=Source.PixelHeight}" />
    </Style>

    <Style x:Key="NicoVideoWindow.ItemContainerStyle" TargetType="ListBoxItem" BasedOn="{StaticResource MetroListBoxItem}">
        <Setter Property="behavior:FrameworkElementBehavior.DoubleClick" Value="{Binding OnDoubleClick}" />
        <Setter Property="behavior:ControlBehavior.KeyDown" Value="{Binding OnKeyDown}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="ContextMenu">
            <Setter.Value>
                <ContextMenu>
                    <MenuItem Header="追加"
                              Command="{Binding OnAdd}" />
                    <MenuItem Header="削除" 
                              Command="{Binding OnDelete}" />
                    <MenuItem Header="ﾀﾞｳﾝﾛｰﾄﾞ" 
                              Command="{Binding OnDownload}" />
                </ContextMenu>
            </Setter.Value>
        </Setter>
    </Style>

    <!--
        VideoItemsWindow定義
    -->
    <Style x:Key="NicoTemporary.NicoVideoWindow.ItemContainerStyle" TargetType="ListBoxItem" BasedOn="{StaticResource MetroListBoxItem}">
        <Setter Property="behavior:FrameworkElementBehavior.DoubleClick" Value="{Binding OnDoubleClick}" />
        <Setter Property="behavior:ControlBehavior.KeyDown" Value="{Binding OnKeyDown}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="ContextMenu">
            <Setter.Value>
                <ContextMenu>
                    <MenuItem Header="削除" 
                              Command="{Binding OnDelete}" />
                    <MenuItem Header="ﾀﾞｳﾝﾛｰﾄﾞ" 
                              Command="{Binding OnDownload}" />
                </ContextMenu>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NicoMylistWindow.ItemContainerStyle" TargetType="ListBoxItem" BasedOn="{StaticResource MetroListBoxItem}">
        <Setter Property="behavior:FrameworkElementBehavior.DoubleClick" Value="{Binding OnDoubleClick}" />
        <Setter Property="behavior:ControlBehavior.KeyDown" Value="{Binding OnKeyDown}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="ContextMenu">
            <Setter.Value>
                <ContextMenu>
                    <MenuItem Header="削除" 
                              Command="{Binding OnFavoriteDel}" />
                </ContextMenu>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NicoComboBox" TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBox}">
        <Setter Property="MinWidth" Value="100" />
    </Style>
    <system:Double x:Key="Width.MenuIcon">90</system:Double>

    <Style x:Key="MenuIconpacksButton" TargetType="windows:IconPacksButton">
        <Setter Property="Margin" Value="{StaticResource Margin.Header}" />
        <Setter Property="MinWidth" Value="50" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.SS}" />
        <Setter Property="Width" Value="{StaticResource Width.MenuIcon}" />
    </Style>

</ResourceDictionary>