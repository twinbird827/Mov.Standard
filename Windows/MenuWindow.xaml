<UserControl x:Class="Mov.Standard.Windows.MenuWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mov.Standard.Windows"
             xmlns:nico="clr-namespace:Mov.Standard.Nico.Workspaces"
             xmlns:behavior="clr-namespace:My.Wpf.Behaviors;assembly=My.Wpf"
             behavior:FrameworkElementBehavior.Loaded="{Binding OnLoaded}"
             mc:Ignorable="d">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type nico:NicoMainViewModel}">
            <nico:NicoMainWindow />
        </DataTemplate>

    </UserControl.Resources>

    <ContentPresenter Content="{Binding}" />

</UserControl>
